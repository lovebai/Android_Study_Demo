<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/go_on_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一个RecyclerView"
            android:textSize="18sp"
            android:background="@color/gray"
            />
        <Button
            android:id="@+id/go_on_rec_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第二个RecyclerView"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:background="@color/gray"
            />
        <Button
            android:id="@+id/go_on_rec_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三个RecyclerView"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:background="@color/gray"
            />
        <Button
            android:id="@+id/go_on_rec_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第四个RecyclerView"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:background="@color/gray"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>